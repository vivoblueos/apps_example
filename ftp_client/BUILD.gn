import("//build/templates/build_template.gni")
import("//build/templates/rust.gni")
import("//build/toolchain/blueos.gni")
import("//kernel/common_crate_rustflags.gni")

executable("ftp_client_example") {
  crate_name = "ftp_client_example"
  crate_type = "bin"

  sources = [ "src/main.rs" ]
  deps = [
    "//external/log/v0.4.22:log",
    "//external/rust-ftp/master:ftp",
    "//kernel/rsrt:rsrt_std",
    "//librs:librs",
  ]

  inputs = [ "//kernel/kernel/src/boards/$board/link.x" ]
  rustflags = [
    "--cfg",
    "feature=\"debug_print\"",
    "--cfg",
    "feature=\"log\"",
  ]
  rustflags += common_image_rustflags
  rustflags += common_crate_rustflags
}

gen_qemu_runner("ftp_client_example_test_runner") {
  semihosting = true
  img = ":ftp_client_example"
  qemu = "$qemu_exe"
  machine = "$machine"
  qemu_args = qemu_extra_args
  net_args = qemu_net_args
  block_img = "ftp_client_example.img"
  block_args = qemu_block_args
}
